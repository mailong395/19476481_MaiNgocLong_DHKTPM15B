<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển đổi năm dương lịch"
        android:textSize="24dp"
        android:textAlignment="center"
        android:background="#008000"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Năm dương lịch:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/editText_NamDuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/button_ChuyenDoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="chuyển đổi"
            android:textSize="20dp"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Năm âm lịch:"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/textView_NamAm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="#FFFF00"
            android:text="Năm âm lịch"
            android:padding="8dp"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>